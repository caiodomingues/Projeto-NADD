@model IEnumerable<NADD.Models.Area>

@{
    ViewData["Title"] = "Areas";
}

<h2>Areas</h2>

<p>
    <a asp-action="Create" class="btn btn-info">Nova Area</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeArea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeArea)
            </td>
            <td class="pull-right">
                <a asp-action="Details" asp-route-id="@item.AreaId" class="btn btn-info btn-sm"><i class="glyphicon glyphicon-eye-open"></i></a>
                <a asp-action="Delete" asp-route-id="@item.AreaId" class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-trash"></i></a>
                <a asp-action="Edit" asp-route-id="@item.AreaId" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
