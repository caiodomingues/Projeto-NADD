@model IEnumerable<NADD.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<p class="sub-titulo">Controle de Cursos</p>

<table class="table table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCriacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.NomeCurso)
                </td>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.Area.NomeArea)
                </td>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.DtCriacao)
                </td>
                <td class="col-md-3 row">
                    <a asp-action="Edit" asp-route-id="@item.CursoId" class="btn btn-primary col-md-3 opcoes">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.CursoId" class="btn btn-info col-md-4 opcoes">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.CursoId" class="btn btn-danger col-md-3 opcoes">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-md-12">
    <div class="col-md-4"></div>
    <a class="btn btn-success col-md-4" asp-action="Create">Novo Curso</a>
    <div class="col-md-4"></div>
</div>
