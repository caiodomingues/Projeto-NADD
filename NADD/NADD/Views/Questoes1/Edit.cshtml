@model NADD.Models.Questoes

@{
    ViewData["Title"] = "Edit";
}

    <p class="sub-titulo">Editar Questão</p>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestoesId" />
            <div class="form-group col-md-4">
                <label asp-for="NumeroQuestao" class="control-label"></label>
                <input asp-for="NumeroQuestao" class="form-control" />
                <span asp-validation-for="NumeroQuestao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="1">Textual</option>
                    <option value="2">Multipla escolha</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Contextualizada" class="control-label"></label>
                <select asp-for="Contextualizada" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Clareza" class="control-label"></label>
                <select asp-for="Clareza" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Complexibilidade" class="control-label"></label>
                <select asp-for="Complexibilidade" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="AvaliacaoId" class="control-label"></label>
                <select asp-for="AvaliacaoId" class="form-control" asp-items="ViewBag.AvaliacaoId"></select>
                <span asp-validation-for="AvaliacaoId" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <div class="">
                    <a asp-action="Index" class="col-md-2 btn btn-primary">Voltar</a>
                </div>
                <div class="col-md-8"></div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="col-md-2 btn btn-default btn btn-success " />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
