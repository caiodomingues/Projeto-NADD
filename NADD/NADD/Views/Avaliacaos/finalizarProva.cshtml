@model NADD.Models.Avaliacao

@{
    ViewData["Title"] = "Edit";
}

<p class="sub-titulo">Considerações finais da Avaliação</p>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="finalizarProva">
            <input type="hidden" asp-for="AvaliacaoId" />
            <input type="hidden" asp-for="DisciplinaId" />
            <input type="hidden" asp-for="ProfessorId" />
            <input type="hidden" asp-for="Periodo" />
            <input type="hidden" asp-for="QtyQuestoes" value="@ViewData["qtd_questoes"]" />
            @*<input type="hidden" asp-for="QtyQuestoes" value="@ViewData["soma_questoes"]" />*@
            <div class="form-group col-md-4">
                <label asp-for="ValorQuestExp" class="control-label"></label>
                <select asp-for="ValorQuestExp" class="form-control" id="valor-quest">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ValorProvaExp" class="control-label"></label>
                <select asp-for="ValorProvaExp" class="form-control" id="valorProvaExp">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="RefBibliograficas" class="control-label"></label>
                <select asp-for="RefBibliograficas" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Eqdistvquest" class="control-label"></label>
                <select asp-for="Eqdistvquest" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PQuestMultdisc" class="control-label"></label>
                <select asp-for="PQuestMultdisc" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Ppquestcontext" class="control-label"></label>
                <select asp-for="Ppquestcontext" class="form-control">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="col-md-12">
                <div class="">
                    <a asp-action="Index" class="col-md-2 btn btn-primary">Voltar</a>
                </div>
                <div class="col-md-8"></div>
                <div class="form-group">
                    <input type="submit" value="Finalizar Prova" class="col-md-2 btn btn-default btn btn-success " />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
