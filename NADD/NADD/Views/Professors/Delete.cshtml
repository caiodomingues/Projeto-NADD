@model NADD.Models.Professor

@{
    ViewData["Title"] = "Delete";
}

    <p class="sub-titulo">Deletar Professor</p>

<h3>Tem certeza que deseja EXCLUIR ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome Professor (a)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeProfessor)
        </dd>
        <dt>
            E-mail
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmailProfessor)
        </dd>
        <dt>
            Telefone
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TelProfessor)
        </dd>
    </dl>
    <form asp-action="Delete" class="">
        <div class="col-md-12">
            <input type="hidden" asp-for="ProfessorId" />
            <a asp-action="Index" class="btn btn-primary col-md-2">Voltar</a>
            <div class="col-md-8"></div>
            <input type="submit" value="Delete" class="btn btn-danger col-md-2" />
        </div>
    </form>
</div>
